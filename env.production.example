# Production Environment Variables for Tether Backend
# Copy this to .env.production and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tether

# Server Configuration
PORT=8080
NODE_ENV=production

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_JWT_KEY=your_clerk_jwt_key_here
CLERK_ISSUER_URL=https://clerk.your-domain.com
CLERK_AUDIENCE=https://clerk.tether.com

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random

# OpenAI Configuration (Optional - for AI summaries)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Frontend URL (for CORS) - Update this with your Netlify URL
FRONTEND_URL=https://your-tether-app.netlify.app

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 